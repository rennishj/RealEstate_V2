@model RealEstate.Web.Models.EnquiryViewModel

@{
    ViewBag.Title = "Add Enquiry";
}

<h3>@ViewBag.Title</h3>

@using (Html.BeginForm("Add", "Enquiry", FormMethod.Post, new { data_abide = ""}))
{
    <div class="row">
        <div class="small-6 columns">
            @Html.LabelFor(m => m.FirstName)
            @Html.TextBoxFor(m => m.FirstName, new { @class = "first_name", required = "required" })
        </div>
        <div class="small-6 columns">
            @Html.LabelFor(m => m.LastName)
            @Html.TextBoxFor(m => m.LastName, new { @class = "last_name", required = "required" })
        </div>
    </div>
    <div class="row">
        <div class="small-6 columns">
            @Html.LabelFor(m => m.Email)
            @Html.TextBoxFor(m => m.Email, new { @class = "email",  required = "required",pattern=@"^([\w\.\-]+)@([\w\-]+)((\.(\w){2,3})+)$" })
        </div>
        <div class="small-6 columns">
            @Html.LabelFor(m => m.Phone)
            @Html.TextBoxFor(m => m.Phone, new { @class = "phone" , required = "required"})
        </div>
    </div>
    <div class="row">
        <div class="small-12 columns">
            @Html.LabelFor(m => m.Comment)
            @Html.TextAreaFor(m => m.Comment, new { @class = "realestate-comment", required = "required" })
        </div>
    </div>
   
    <div class="row">
        <div class="small-3 right columns">
            <input type="submit" class="button" value="Add Comment" />
            <input type="submit" class="button" value="Cancel" />
        </div>
    </div>
    

}


